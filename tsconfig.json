{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "es2015",
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declarationMap": true,
    "declaration": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "build",
    "types": ["node"]
  },
  "exclude": ["**/__tests__/**/*", "**/build/**/*"],
  "include": ["src/**/*"]
}
